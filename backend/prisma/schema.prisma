generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  isAdmin   Boolean  @default(false)
  orders    Order[]
}

model Order {
  id          String      @id @default(uuid())
  user        User        @relation(fields: [userId], references: [id])
  userId      String
  service     ServiceType
  location    String
  latitude    Float?
  longitude   Float?
  package     Package
  description String
  estimate    Float?      // Estimated price
  date        String?     // Date of filming (ISO format)
  time        String?     // Time of filming (HH:mm)
  status      OrderStatus @default(PENDING)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

enum ServiceType {
  AERIAL_PHOTOGRAPHY
  EDITED_VIDEO
  MAPPING_3D
  INDUSTRIAL_INSPECTION
}

enum Package {
  RAW
  EDITED
}

enum OrderStatus {
  PENDING
  APPROVED
  REJECTED
}
